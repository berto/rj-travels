<!-- Banner -->
  <header class="major">
    <a href="/blogs"><h2>Blog Posts</h2></a>
  </header>
  <div class="posts">
    <% @blogs.each do |blog| %>
      <article>
        <figure class="thumbnail">
          <%= image_tag blog.image ? blog.image : 'https://s3.amazonaws.com/colombia-rj-travels/default.jpg'%>
        </figure>
        <h3><%= blog.title %></h3>
        <h6><%= blog.date.strftime("%m/%d") %></h6>
        <p><%= blog.article.first(400) + '...' %></p>
        <ul class="actions">
          <li> <td><%= link_to '<button> More </button>'.html_safe, blog %></td> </li>
        </ul>
      </article>
    <%end %>
  </div>
</section>
