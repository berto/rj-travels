<!-- Content -->
<section>
  <span id="notice"><%= notice %></span>
  <header class="major">
    <a href="/gallery/"><h1>Photo Gallery</h1></a>
    <a href="/gallery/<%= @country %>"><h2> <%= @country.capitalize %></h2></a>
  </header>
  <% if @pictures.empty? %>
    <h2> No Pictures Yet! </h2>
  <% else %>
    <div class="posts countries">
      <% @pictures.each do |picture| %>
        <article>
          <a href="<%= picture[:link] %>">
            <figure class="thumbnail">
              <%= image_tag picture[:link]%>
            </figure>
          </a>
          <h3><%= picture[:name] %></h3>
        </article>
      <% end %>
    </div>
  <% end %>
</section>
